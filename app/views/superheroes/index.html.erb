<h2>All Superheroes</h2>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero_path(superhero) %>
    </li>
    <br>
  <% end %>
</ul>

<h2>Search for hero</h2>
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for superpower:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
