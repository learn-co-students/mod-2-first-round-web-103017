<h2>All Superheroes</h2>

<%= form_tag ('/superpowers', :method => :get) do %>
  <%= label_tag(:name, "Search for:") %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search' %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero_path(superhero) %>
    </li>
    <br>
  <% end %>
</ul>
