<h2>All Superheroes</h2>

<h4>Search by Superpower</h4>
<%= form_tag(superheroes_path, method: "get") do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @superheroes.each do |superhero| %>
    <li>
      <%= link_to superhero.super_name, superhero %>
    </li>
    <br>
  <% end %>
</ul>

<% if @superheroes.empty? %>
  <h4>There are no superheroes with the "<%= params[:search] %>" superpower.</h4>
<% end %>

<h4><%= link_to "Create a Superhero", new_superhero_path   %></h4>
