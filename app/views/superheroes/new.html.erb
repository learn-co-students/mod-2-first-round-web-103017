<h1>Create a new Super Hero!</h1>

<% if @superhero.errors.any? %>
<h2>Invalid input.  Please try again.  <%= pluralize(@superhero.errors.count, 'error') %>:</h2>
<% @superhero.errors.full_messages.each do |message| %>
<p> <%= message %></p>
<% end %>
<br><br>
<% end %>


<%= form_for @superhero do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br>
<%= f.label :super_name %>
<%= f.text_field :super_name %> <br>
<%= f.label :super_power %>
<%= f.collection_select(:superpower_id, Superpower.all, :id, :name) %> <br>
<%= f.submit %>
<% end %>
