<h1>Create a new Superhero!</h1>

<!-- write validation errors for invalid entry here. Iterate through each message in the errors object and display them in a list.  -->

<%= form_for @superhero do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br></br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name %>
  <br></br>
  <label>Select one Super Power!</label>
  <%= f.collection_select :superpower_id, @superpowers, :id, :name %>
  <br></br>
  <%= f.submit %>
<% end %>
